{
  "name": "Pinboard Pro",
  "version": "1.2.0",
  "manifest_version": 2,
  "description": "Firefox add-on for Pinboard (https://pinboard.in).",
  "author": "José María Martín Luque (fork), original from Richard Käll",
  "homepage_url": "https://github.com/jmml97/pinboard-pro-firefox",
  "commands": {
    "save": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "MacCtrl+Shift+S"
      },
      "description": "Save bookmark"
    },
    "read_later": {
      "suggested_key": {
        "default": "Ctrl+Shift+L",
        "mac": "MacCtrl+Shift+L"
      },
      "description": "Read later"
    },
    "all": {
      "suggested_key": {
        "default": "Ctrl+Shift+A",
        "mac": "MacCtrl+Shift+A"
      },
      "description": "All bookmarks"
    },
    "unread": {
      "suggested_key": {
        "default": "Ctrl+Shift+U",
        "mac": "MacCtrl+Shift+U"
      },
      "description": "Unread bookmarks"
    },
    "random": {
      "description": "Random unread"
    }
  },
  "icons": {
    "16": "images/icon-16.png",
    "128": "images/icon-128.png"
  },
  "background": {
    "scripts": [
      "js/pinboard.js",
      "js/background.js"
    ]
  },
  "browser_action": {
    "default_icon": {
      "19": "images/icon-19.png",
      "38": "images/icon-38.png"
    },
    "default_title": "Pinboard",
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs"
  ]
}
